@model veri.AnaSayfa

@{
    ViewBag.Title = "Anasayfa Düzenke";
}


<div class="container">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h2>Anasayfa Düzenle</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.kullanicid)
        @Html.HiddenFor(model => model.Anasayfaid)
        <div class="bg-danger">
            @TempData["Message"]
        </div>
        <br />
        <br />

        <div class="container">
            <div>
                <div class="row mb-4">
                    <div class="form-group col">
                        @Html.EditorFor(model => model.AnasayfaAdi, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Site Adı", @type = "text" } })
                    </div>
                    <div class="form-group col">
                        @Html.EditorFor(model => model.AnasayfaİsimAciklama, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Site Açıklama", @type = "text" } })
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="form-group col">
                        @Html.EditorFor(model => model.AnasayfaElektrik, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Elektrik  Adı", @type = "text" } })
                    </div>
                    <div class="form-group col">
                        @Html.EditorFor(model => model.AnasayfaElektrikAciklama, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Açıklama", @type = "text" } })
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="form-group col">
                        @Html.EditorFor(model => model.AHakkindaİsim, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @placeholder = "Hakkında İsim", @type = "text" } })
                    </div>
                    <div class="form-group col">
                        @Html.EditorFor(model => model.AHakkindaAciklama, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @placeholder = "Açıklama", @type = "text" } })
                    </div>
                </div>
                <!-- Text input -->
                <div class="row mb-4">
                    <div class="form-group col">
                        @Html.EditorFor(model => model.ADunyaİsim, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @placeholder = "Hakkında Başlık", @type = "text" } })
                    </div>
                    <div class="form-group col">
                        @Html.EditorFor(model => model.ADunyaAciklama, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", autofocus = "", @placeholder = "Açıklama", @type = "text" } })
                    </div>
                </div>
                <hr />
                <div class="row mb-4">
                    <div class="form-group col">
                        <div>
                            <a href="~/yonetim/" class="btn btn-primary btn-block mb-3">Geri Gel</a>
                        </div>
                    </div>
                    <div class="form-group col">

                        <div class="form-group">
                            <div class="">
                                <input type="submit" value="Düzenle" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>
    }


</div>

