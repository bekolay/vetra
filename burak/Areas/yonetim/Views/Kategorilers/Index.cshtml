@model IEnumerable<veri.Kategoriler>

@{
    ViewBag.Title = "Kategoriler";
}
<div class="container" style="background: #ffffff;border-top-width: 50px;padding-top: 50px;padding-bottom: 50px;">
    <h2>Menüler</h2>
    <br />
    <p>
        @Html.ActionLink("Kategori Oluştur", "Create")
    </p>
    <hr />
    <br />
    <table id="datable_1" class="table table-hover display">
        <thead>
            <tr>
                <th>#</th>
                <th>Menü Adı</th>
                <th>Kategori Adı</th>
                <th>Aktif Mi</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Kategorid)</td>
                    <td>@Html.DisplayFor(modelItem => item.Menuler.MenuAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.kategoriAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.KategoriAktif)</td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Kategorid })
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

