@model veri.Menuler

@{
    ViewBag.Title = "Menü Oluştur";
}


<div class="container">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Menü Oluştur</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="bg-danger">
                @TempData["Message"]
            </div>
            <br />
            <br />

            <div class="container">
                <div>
                    <div class="row mb-4">
                        <div class="form-group col">
                            @Html.EditorFor(model => model.MenuAdi, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Menü Adı", @type = "text" } })
                        </div>
                        <div class="form-group col">
                            <div class="form-group">
                                <label>Menü mü ?</label>
                                <br />
                                <div class="">
                                    @Html.DropDownList("MenuMi", new List<SelectListItem> {
                     new SelectListItem {
                        Text="true",
                        Value="true",
                        // Selected = true, seçili olarak gelsin
                        // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                     },
                     new SelectListItem {
                        Text="false",
                        Value="false",
                     },
                 }, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="form-group col">
                            <div class="form-group">
                                <label>Kategori mi ?</label>
                                <br />
                                <div class="">
                                    @Html.DropDownList("KategoriMi", new List<SelectListItem> {
                     new SelectListItem {
                        Text="true",
                        Value="true",
                        // Selected = true, seçili olarak gelsin
                        // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                     },
                     new SelectListItem {
                        Text="false",
                        Value="false",
                     },
                 }, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>   
                        </div>
                    <hr />
                    <div class="row mb-4">
                        <div class="form-group col">
                            <div>
                                <a href="~/yonetim/Menulers/" class="btn btn-primary btn-block mb-3">Geri Gel</a>
                            </div>
                        </div>
                        <div class="form-group col">

                            <div class="form-group">
                                <div class="">
                                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    }


</div>
