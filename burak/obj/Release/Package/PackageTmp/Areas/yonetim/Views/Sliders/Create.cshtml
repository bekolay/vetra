@model veri.Slider

@{
    ViewBag.Title = "Slider Oluştur";
}



<div class="container">


    @using (Html.BeginForm("Create", "Sliders", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="form-horizontal">
            <h2>Menü Düzenle</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="bg-danger">
                @TempData["Message"]
            </div>
            <br />
            <br />

            <div class="container">
                <div>
                    <div class="row mb-4">
                        <div class="form-group col">
                            @Html.EditorFor(model => model.SliderResimAdi, new { htmlAttributes = new { @type = "file", @accept = ".png,.jpg, .jpeg,/Hesap/", @id = "input-file-now-custom-1", @class = "dropify form-controlstyle" } })

                        </div>
                        <div class="form-group col">
                            @Html.EditorFor(model => model.SliderAdi, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Slider Adı", @type = "text" } })
                        </div>
                    </div>
                    <div class="form-group col">
                        <div class="form-group">
                            <label>Aktif Mi ?</label>
                            <br />
                            <div class="">
                                @Html.DropDownList("AkitfMi", new List<SelectListItem> {
                 new SelectListItem {
                    Text="true",
                    Value="true",
                    // Selected = true, seçili olarak gelsin
                    // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                 },
                 new SelectListItem {
                    Text="false",
                    Value="false",
                 },
             }, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-4">
                        <div class="form-group col">
                            <div>
                                <a href="~/yonetim/Sliders/" class="btn btn-primary btn-block mb-3">Geri Gel</a>
                            </div>
                        </div>
                        <div class="form-group col">

                            <div class="form-group">
                                <div class="">
                                    <input type="submit" value="Düzenle" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    }


</div>

