@model veri.FooterLinkler

@{
    ViewBag.Title = "Footer Link Oluştur";
}
<div class="container">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Footer Link Düzenle</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Ftarih)
        @Html.HiddenFor(model => model.Fid)
        <div class="bg-danger">
            @TempData["Message"]
        </div>
        <br />
        <br />

        <div class="container">
            <div>
                <div class="row mb-4">
                    <div class="form-group col">
                        @Html.EditorFor(model => model.FLinkAdi, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Link Adı", @type = "text" } })
                    </div>
                    <div class="form-group col">
                        @Html.EditorFor(model => model.FLinkUrl, new { htmlAttributes = new { @class = "form-control", size = "25", @required = "required", @placeholder = "Url", @type = "text" } })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">

                        <div class="form-group">
                            <label>Aktif Mi</label>
                            <br />
                            <div class="">
                                @Html.DropDownList("FAktifMi", new List<SelectListItem> {
                 new SelectListItem {
                    Text="true",
                    Value="true",
                    // Selected = true, seçili olarak gelsin
                    // Disabled = true  disable olarak gelsin istersek kullanıyoruz
                 },
                 new SelectListItem {
                    Text="false",
                    Value="false",
                 },
             }, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FAktifMi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mb-4">
                    <div class="form-group col">
                        <div>
                            <a href="~/yonetim/FooterLinklers/" class="btn btn-primary btn-block mb-3">Geri Gel</a>
                        </div>
                    </div>
                    <div class="form-group col">

                        <div class="form-group">
                            <div class="">
                                <input type="submit" value="Düzenle" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




    </div>
    }


</div>

