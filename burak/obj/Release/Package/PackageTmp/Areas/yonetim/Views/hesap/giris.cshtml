@model burak.Models.LoginModel
@{
    ViewBag.Title = "Admin Giriş";
}
@using (Html.BeginForm())
{
    <!------ Include the above in your HEAD tag ---------->
    <br />
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                         class="img-fluid" alt="Sample image">
                </div>

                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <div>
                        <div class="">
                            <div class="">
                                @TempData["Message"]
                            </div>
                        </div>
                        <br />
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            @Html.TextBoxFor(model => model.kullaniciAdi, new { @class = "form-control form-control-lg", type = "text", id = "text", @placeholder = "Kullanıcı Adı" })

                            <label class="form-label" for="form3Example3">Kullanıcı Adı</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            @Html.EditorFor(model => model.KullaniciSifre, new { htmlAttributes = new { @class = "form-control form-control-lg", size = "25", @required = "required", autofocus = "", @placeholder = "Şifre", @type = "password" } })

                            <label class="form-label" for="form3Example4">Şifre</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a href="#!" class="text-body">Şifre Sıfırla</a>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Giriş Yap
                            </button>
                        </div>


                    </div>
                </div>
                
            </div>
        </div>
    </section>

}