@model veri.Hizmetler
@{
    ViewBag.Title = Model.HizmetlerAdi;
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta charset="utf-8" />
    <meta name="description" content="@Model.HizmetKisaYazi">
    <title>@ViewBag.Blogadi - @Html.Partial("_siteAdi", burak.Models.Data.SiteAyar)</title>
    <link rel="canonical" href="@Request.Url.GetLeftPart(UriPartial.Authority)/@Model.HizmetlerUrl" type="text/html">
    <meta name="google" content="notranslate">
    <meta http-equiv="content-language" content="tr-TR">

    <meta property="og:type" content="@Html.Partial("_siteAdi", burak.Models.Data.SiteAyar)">
    <meta property="og:site_name" content="@Html.Partial("_siteAdi", burak.Models.Data.SiteAyar)">
    <meta property="og:title" content="@Model.HizmetlerAdi">
    <meta property="og:description" content="@Model.HizmetKisaYazi">
    <meta property="og:url" content="@Request.Url.GetLeftPart(UriPartial.Authority)/@Model.HizmetlerUrl">
    <meta property="og:locale" content="tr_TR">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@Html.Partial("_siteAdi", burak.Models.Data.SiteAyar)">
    <meta name="twitter:title" content="@Model.HizmetKisaYazi">
    <meta name="twitter:url" content="@Request.Url.GetLeftPart(UriPartial.Authority)/@Model.HizmetlerUrl">
    <meta name="twitter:description" content="@Model.HizmetKisaYazi">
    <link rel="image_src" href="@Request.Url.GetLeftPart(UriPartial.Authority)/images/@Model.HizmetlerResim">
    <meta name="twitter:image" content="@Html.Partial("_siteAdi", burak.Models.Data.SiteAyar)/images/@Model.HizmetlerResim">
    <meta property="og:image" content="@Html.Partial("_siteAdi", burak.Models.Data.SiteAyar)/images/@Model.HizmetlerResim">


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/8f34fc02d2.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <!-- Container wrapper -->
        <div class="container">
            <!-- Navbar brand -->
            @Html.Partial("_Logo", burak.Models.Data.SiteAyar)

            <!-- Toggle button -->
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Gezintiyi aç/kapat" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="fas fa-bars"></span>
            </button>

            <!-- Collapsible wrapper -->

            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <!-- Container wrapper -->
                    <div class="container-fluid">
                        <!-- Toggle button -->
                        <!-- Collapsible wrapper -->

                        <div class="collapse navbar-collapse" id="navbarRightAlignExample">
                            <!-- Left links -->
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/">Anasayfa</a>
                                </li>
                                @Html.Partial("_menumi", burak.Models.Data.menumi)
                                <!-- Navbar dropdown -->
                                @Html.Partial("_hizmetler", burak.Models.Data.hizmetler)
                                @Html.Partial("_kategorimi", burak.Models.Data.deneme)
                            </ul>
                            <!-- Left links -->
                        </div>
                        <!-- Collapsible wrapper -->
                    </div>
                    <!-- Container wrapper -->
                </nav>
            </div>

            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
    <div class="">

        @if (Model.HizmetlerResim == null)
        {
            <div class="container">

                <div class="aboutus-area">
                    <div class="container">
                        <div class="row">
                            <div class="container">
                                <br />
                                <div class="container">
                                    <div class="aboutus-content ">
                                        <h2 class="text-center">
                                            <span>@Model.HizmetlerAdi</span>
                                        </h2>
                                        <br />
                                        <p>@Html.Raw(Model.HizmetlerYazi)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
        else
        {
            <div class="container">

                <div class="aboutus-area">
                    <div class="container">
                        <div class="row">
                            <div class="container">
                                <div class="">
                                    <div class="aboutus-image"><img src="~/dosya/@Model.HizmetlerResim" alt="@Model.HizmetlerAdi"></div>
                                </div>
                                <br />
                                <div class="container">
                                    <div class="aboutus-content ">
                                        <h2 class="text-center">
                                            <span>@Model.HizmetlerAdi</span>
                                        </h2>
                                        <br />
                                        <p>@Html.Raw(Model.HizmetlerYazi)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }

        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 footerleft ">
                        @Html.Partial("_footersiteayar", burak.Models.Data.SiteAyar)

                    </div>
                    <div class="col-md-4 col-sm-6 paddingtop-bottom ">
                        <h6 class="heading7">GENERAL LINKS</h6>
                        <ul class="footer-ul">
                            <li><a href="/"> Ana Sayfa</a></li>
                            <li><a href="/"> Link2</a></li>
                            <li><a href="http://webenlance.com"> Terms & Conditions</a></li>
                            <li><a href="http://webenlance.com"> Client Gateway</a></li>
                            <li><a href="http://webenlance.com"> Ranking</a></li>
                            <li><a href="http://webenlance.com"> Case Studies</a></li>
                            <li><a href="http://webenlance.com"> Frequently Ask Questions</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        <!--footer start from here-->
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>


    <!-- ✅ load Bootstrap JS ✅ -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"></script>
</body>
</html>
